<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:contentDescription="sound">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btnHeight"
        android:text="Sound 1"
        android:contentDescription="Sound 1"
        android:id = "@+id/btnSound1"
        android:onClick="onClick"
        android:layout_weight="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btnHeight"
        android:text = "Sound 2"
        android:contentDescription="Sound 2"
        android:id = "@+id/btnSound2"
        android:onClick="onClick"
        android:layout_weight="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btnHeight"
        android:text="Sound 3"
        android:contentDescription="Sound 3"
        android:id = "@+id/btnSound3"
        android:onClick="onClick"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="tv">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btnHeight"
            android:text=" Mute  "
            android:contentDescription="Mute"
            android:id="@+id/btnMute"
            android:onClick="onClick"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>