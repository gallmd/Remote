<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="tv">

    <include layout="@layout/tv_layout_left"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_weight="1"/>


    <include layout="@layout/tv_layout_arrows_left"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_weight="4"/>


    <include layout="@layout/tv_layout_arrows_center"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_weight="4"/>

    <include layout="@layout/tv_layout_arrows_right"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_weight="4"/>

    <include layout="@layout/tv_layout_right"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_weight="1"/>

</LinearLayout>